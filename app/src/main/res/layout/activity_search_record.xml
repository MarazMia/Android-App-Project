<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".SearchRecord">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="250dp"
            android:layout_height="137dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon2" />
        <TextView
            android:id="@+id/textv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Please enter your expected year and month name to see the related data..."
            android:textAlignment="center"
            />
        <EditText
            android:layout_gravity="center"
            android:id="@+id/searchYear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:inputType="numberPassword"

            android:hint="enter your year"
            android:textAlignment="center"
            />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/searchMonth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"

            android:hint="enter your month"
            android:textAlignment="center"
            />

        <Button
            android:layout_gravity="center"
            android:id="@+id/search"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonshape"
            android:text="Search"
            android:textSize="20sp" />

    </LinearLayout>




</ScrollView>