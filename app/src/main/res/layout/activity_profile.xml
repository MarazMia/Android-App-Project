<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"
            android:textAlignment="center"
            />
        <EditText
            android:layout_gravity="center"
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:hint="Year"
            android:textAlignment="center"
            />
        <EditText
            android:layout_gravity="center"
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:hint="Month"
            android:textAlignment="center"
            />
        <EditText
            android:layout_gravity="center"
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:hint="Date"
            android:textAlignment="center"
            />


        <EditText
            android:layout_gravity="center"
            android:id="@+id/sugarLevel"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:hint="Sugar Level in mmol/L"

            android:textAlignment="center"
            />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/consumed_calories"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:hint="Consumed Calories in kCal"
            android:textAlignment="center"
            />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/systolicRate"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"

            android:hint="Systolic Blood Pressure in mmHg"
            android:textAlignment="center"
            />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/diastolicRate"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"

            android:hint="Diastolic Blood Pressure in mmHg"
            android:textAlignment="center"
            />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/weight"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"

            android:hint="Weight in Kg"
            android:textAlignment="center"
            />

        <Button
            android:layout_gravity="center"
            android:id="@+id/submit"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonshape"
            android:text="Submit"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/loginprogress"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <DatePicker
            android:id="@+id/picdate"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </DatePicker>

        <ProgressBar
            android:id="@+id/update_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            />

        <TimePicker
            android:id="@+id/timepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

        </TimePicker>


    </LinearLayout>




</ScrollView>