<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/browser_actions_text_color"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/idaboutNormal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:text="Normal Values : "
            android:textSize="30sp"
            android:textColor="@android:color/holo_green_light"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:textSize="30sp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/idabout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:text="Some Acronym Used In This App : "
            android:textSize="30sp"
            android:textColor="@android:color/holo_green_light"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/acronym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SL = Sugar Level CC = Consumed Calories SR = Systolic Rate DS = Diastoloic Rate"
            android:layout_marginBottom="30dp"
            android:textSize="30sp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/credit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Developed By : "
            android:layout_marginBottom="30dp"
            android:textSize="30sp"
            android:textColor="@android:color/holo_green_light"
            android:textAlignment="center"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:layout_gravity="center"
            android:src="@drawable/credit1"

            />
        <TextView
            android:id="@+id/credit1"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:text="Name : Maraz Mia Registration No : 2017831036"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:layout_gravity="center"
            android:src="@drawable/credit2"

            />
        <TextView
            android:id="@+id/credit2"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:text="Name : Sifat Ohee Registration No : 2017831012"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            />



    </LinearLayout>




</ScrollView>